<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_lesson" tools:context=".LessonActivity">


    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:id="@+id/progress"
        android:visibility="gone"
        style="@style/Widget.MaterialProgressBar.ProgressBar" />

    <!--<ProgressBar android:id="@+id/progress" style="@style/Base.Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp" android:visibility="gone" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <android.support.v4.widget.NestedScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:id="@+id/lesson_form"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:id="@+id/date_layout">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_date"
                            android:layout_marginTop="24dp"
                            android:layout_marginLeft="16dp"
                            android:foregroundGravity="center"
                            android:background="@mipmap/ic_today_black_24dp"
                            android:contentDescription="@string/date" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/date_name"
                            android:text="@string/date"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="72dp"
                            android:textSize="16sp"
                            android:textColor="@android:color/primary_text_light"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/date"
                            android:textColor="@android:color/secondary_text_light"
                            android:layout_marginLeft="72dp"
                            android:textSize="14sp"
                            android:paddingBottom="16dp"
                            android:layout_below="@+id/date_name"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentStart="true" />

                        <View
                            android:id="@+id/view1"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginLeft="72dp"
                            android:background="@color/divider"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:id="@+id/time_layout">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_time"
                            android:layout_marginTop="24dp"
                            android:layout_marginLeft="16dp"
                            android:foregroundGravity="center"
                            android:background="@mipmap/ic_access_time_black_24dp"
                            android:contentDescription="@string/time" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/time_name"
                            android:text="@string/time"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="72dp"
                            android:textSize="16sp"
                            android:layout_marginRight="16dp"
                            android:textColor="@android:color/primary_text_light"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/time"
                            android:textColor="@android:color/secondary_text_light"
                            android:layout_marginLeft="72dp"
                            android:textSize="14sp"
                            android:layout_marginRight="16dp"
                            android:paddingBottom="16dp"
                            android:layout_below="@+id/time_name"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentStart="true" />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginLeft="72dp"
                            android:background="@color/divider"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="72dp"
                        android:id="@+id/theme_layout">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_theme"
                            android:layout_marginTop="24dp"
                            android:layout_marginLeft="16dp"
                            android:foregroundGravity="center"
                            android:background="@mipmap/ic_bookmark_black_24dp"
                            android:contentDescription="@string/time" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/theme_name"
                            android:text="@string/theme"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="72dp"
                            android:textSize="16sp"
                            android:layout_marginRight="16dp"
                            android:textColor="@android:color/primary_text_light"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/theme"
                            android:textColor="@android:color/secondary_text_light"
                            android:layout_marginLeft="72dp"
                            android:textSize="14sp"
                            android:paddingBottom="16dp"
                            android:layout_below="@+id/theme_name"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentStart="true" />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginLeft="72dp"
                            android:background="@color/divider"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="72dp"
                        android:id="@+id/marks_layout">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_marks"
                            android:layout_marginTop="24dp"
                            android:layout_marginLeft="16dp"
                            android:foregroundGravity="center"
                            android:background="@mipmap/ic_stars_black_24dp"
                            android:contentDescription="@string/marks" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/marks_name"
                            android:text="@string/marks"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="72dp"
                            android:textSize="16sp"
                            android:layout_marginRight="16dp"
                            android:textColor="@android:color/primary_text_light"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentStart="true" />

                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/marks"
                            android:textColor="@android:color/secondary_text_light"
                            android:layout_marginLeft="72dp"
                            android:textSize="14sp"
                            android:paddingBottom="16dp"
                            android:layout_below="@+id/marks_name"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentStart="true" />-->

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="72dp"
                            android:paddingBottom="16dp"
                            android:id="@+id/marks"
                            android:layout_below="@+id/marks_name"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentStart="true"
                            android:layout_height="wrap_content" android:orientation="horizontal">

                        </LinearLayout>


                        <View
                            android:id="@+id/view5"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginLeft="72dp"
                            android:background="@color/divider"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="72dp"
                        android:id="@+id/pass_layout">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_pass"
                            android:layout_marginTop="24dp"
                            android:layout_marginLeft="16dp"
                            android:foregroundGravity="center"
                            android:background="@mipmap/ic_my_location_black_24dp"
                            android:contentDescription="@string/pass" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pass_name"
                            android:text="@string/pass"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="72dp"
                            android:textSize="16sp"
                            android:layout_marginRight="16dp"
                            android:textColor="@android:color/primary_text_light"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pass"
                            android:textColor="@android:color/secondary_text_light"
                            android:layout_marginLeft="72dp"
                            android:textSize="14sp"
                            android:paddingBottom="16dp"
                            android:layout_below="@+id/pass_name"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentStart="true" />

                        <View
                            android:id="@+id/view6"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginLeft="72dp"
                            android:background="@color/divider"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="72dp"
                        android:id="@+id/note_layout">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_note"
                            android:layout_marginTop="24dp"
                            android:layout_marginLeft="16dp"
                            android:foregroundGravity="center"
                            android:background="@mipmap/ic_announcement_black_24dp"
                            android:contentDescription="@string/marks" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/note_name"
                            android:text="@string/note"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="72dp"
                            android:textSize="16sp"
                            android:layout_marginRight="16dp"
                            android:textColor="@android:color/primary_text_light"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/note"
                            android:textColor="@android:color/holo_red_light"
                            android:layout_marginLeft="72dp"
                            android:textSize="14sp"
                            android:paddingBottom="16dp"
                            android:layout_below="@+id/note_name"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentStart="true" />

                        <View
                            android:id="@+id/view7"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginLeft="72dp"
                            android:background="@color/divider"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="72dp"
                        android:layout_marginBottom="16dp"
                        android:id="@+id/homework_layout">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_homework"
                            android:layout_marginTop="24dp"
                            android:layout_marginLeft="16dp"
                            android:foregroundGravity="center"
                            android:background="@mipmap/ic_work_black_24dp"
                            android:contentDescription="@string/homework_single" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/homework_name"
                            android:text="@string/homework_single"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="72dp"
                            android:textSize="16sp"
                            android:layout_marginRight="16dp"
                            android:textColor="@android:color/primary_text_light"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentStart="true" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/homework"
                            android:textColor="@android:color/secondary_text_light"
                            android:layout_marginLeft="72dp"
                            android:textSize="14sp"
                            android:paddingBottom="16dp"
                            android:layout_below="@+id/homework_name"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentStart="true" />

                        <View
                            android:id="@+id/view4"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginLeft="72dp"
                            android:background="@color/divider"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>

                </LinearLayout>


            </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
</RelativeLayout>



