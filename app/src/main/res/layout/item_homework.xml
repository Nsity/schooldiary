<?xml version="1.0" encoding="utf-8"?>

<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    ripple:rv_centered="true"
    ripple:rv_color="@color/colorPrimary"
    ripple:rv_type="rectangle">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/image_view"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homework_subject"
            android:textSize="18sp"
            android:layout_marginTop="-8dp"
            android:text="sdfsdgsdgsdfdsfsgsdgsdgsdgsdgsgsdgsgdsgsdg"
            android:gravity="fill"
            android:paddingLeft="@dimen/text_margin"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_alignStart="@+id/homework_task"
            android:layout_toStartOf="@+id/homework_date"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homework_task"
            android:text="sdegsdgsdgsdgsgdsgsdgsdgsdgdssdgsdgsdgsdgds88888888888888888888675u54u56uh654h465h4456h"
            android:lines="2"
            android:ellipsize="end"
            android:paddingLeft="@dimen/text_margin"
            android:layout_toEndOf="@+id/image_view"
            android:layout_below="@+id/homework_subject" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21.12.2015"
            android:id="@+id/homework_date"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/homework_task"
            android:layout_alignParentTop="true" />
    </RelativeLayout>
</com.andexert.library.RippleView>