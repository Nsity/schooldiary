<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:id="@+id/progress"
        android:visibility="gone"
        style="@style/Widget.MaterialProgressBar.ProgressBar" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/progress_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="16dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subjects"
                    android:id="@+id/subject"
                    android:textColor="@android:color/primary_text_light"
                    android:gravity="center_vertical"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignBottom="@+id/image_view4"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/image_view4"
                    android:layout_toLeftOf="@id/image_view4"/>
                <ImageView android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/image_view"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>
                <ImageView android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/image_view1"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/image_view"
                    android:layout_toLeftOf="@id/image_view"/>
                <ImageView android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/image_view2"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/image_view1"
                    android:layout_toLeftOf="@id/image_view1"/>
                <ImageView android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/image_view3"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/image_view2"
                    android:layout_toLeftOf="@id/image_view2"/>
                <ImageView android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/image_view4"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/image_view3"
                    android:layout_toLeftOf="@id/image_view3"/>
            </RelativeLayout>
            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/divider" />
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progress_list"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</RelativeLayout>